<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
 login_setting
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, placeholder: "ニックネーム" %>
  </div>
  
  <div class="field">
    <%= f.label :birthday, "誕生日" %><br />
    <%= f.text_field :birthday, placeholder: "誕生日" %>
  </div>
  
  <div class="field">
    <%= f.label :hobby, "趣味" %><br />
    <%= f.text_field :hobby, placeholder: "趣味" %>
  </div>
  
  <div class="field">
    <%= f.label :food, "好きな食べ物" %><br />
    <%= f.text_field :food, placeholder: "食べ物" %>
  </div>
  
  <div class="field">
    <%= f.label :years_old, "年齢" %><br />
    <%= f.number_field :years_old, placeholder: "記入" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
